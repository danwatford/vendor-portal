{
  "platform": {
    "apiRuntime": "node:16"
  },
  "navigationFallback": {
    "rewrite": "/"
  },
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "b2cauth": {
          "registration": {
            "clientIdSettingName": "B2C_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "B2C_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://bfwextapps.b2clogin.com/bfwextapps.onmicrosoft.com/B2C_1_SignUpSignIn/v2.0/.well-known/openid-configuration"
            }
          },
          "login": {
            "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
            "scopes": ["openid", "profile"],
            "loginParameterNames": []
          }
        }
      }
    }
  }
}
